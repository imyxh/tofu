XF86AudioRaiseVolume
    pamixer -i 5
XF86AudioLowerVolume
    pamixer -d 5
F2
    pamixer -d 5
F3
    pamixer -i 5

alt + Return
    st
alt + q
    tofc killw

# requires a patch to sxhkd
alt + !button1
    tofc centre %d %d

# move windows around
alt + {h,l}
    tofc shove {+,-}6 0

alt + {j,k}
    tofc shove 0 {+,-}6

# resize windows
alt + shift + {h,l}
    tofc stretch {+,-}6 0

alt + shift + {j,k}
    tofc stretch 0 {+,-}6

alt + {1,2,3,4,5,6,7}
    tofc ws switch {1,2,3,4,5,6,7}
